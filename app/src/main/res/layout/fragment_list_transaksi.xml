            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Total Unit Kendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="4 Unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Total Unit Kendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="4 Unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>


        </LinearLayout>


